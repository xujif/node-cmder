{
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2017"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true
    }
}